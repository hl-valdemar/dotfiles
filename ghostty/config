# font
font-family = Menlo
font-size = 13
font-thicken = true
font-thicken-strength = 255

cursor-style = block

# better unicode block rendering (in my opinion)
font-codepoint-map = U+2591-U+2593 = Hack Nerd Font

# theme
# theme = dark:Miasma,light:Rose Pine Dawn
theme = dark:Miasma,light:Everforest Light Med
background-opacity = 0.95
background-blur = true

unfocused-split-opacity = 1
unfocused-split-fill = #000000
split-divider-color = #444444

# key bindings - navigation
keybind = command+h=goto_split:left
keybind = command+l=goto_split:right
keybind = command+k=goto_split:up
keybind = command+j=goto_split:down

# key bindings - resizing
keybind = command+shift+h=resize_split:left,20
keybind = command+shift+l=resize_split:right,20
keybind = command+shift+k=resize_split:up,20
keybind = command+shift+j=resize_split:down,20

# start in home, but inherit from working dir
working-directory = home
window-inherit-working-directory = true

